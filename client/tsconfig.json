{
  "compilerOptions": {
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node", 
    "esModuleInterop": true, 
    "resolveJsonModule": true, 
    "strict": true, 
    "target": "ES2020", 
    "module": "ESNext", 
    "outDir": "dist", 
    "allowJs": false, 
    "noEmit": true, 
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",  // Include the src directory for path alias resolution
    "server/**/*",
    "server/sib-api-v3-sdk.d.ts"
  ]
}
